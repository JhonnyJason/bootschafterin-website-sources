// header styles
logo-size = 180px
logo-top-spacing = 20px
logo-to-menu-gap = 10px

burger-size = 30px

minimal-menu-width = 750px

#header
    padding 8px
    border-radius 50px
    overflow hidden
    border solid 1px
    position fixed
    background-color alpha(white, 0.95)
    width 100%
    box-sizing: border-box
    display flex

#logo-frame 
    width 81px
    height: 81px
    cursor: pointer
    svg
        width 80px
        height: 80px

// #menu-row
    

#menu
    display: flex
    justify-content: space-around
    align-items: center
    width 100%
    #burger
        display: none
        background-image: url(/img/burger-icon.svg)
        width: burger-size
        height: burger-size

    .menu-link
        text-transform: uppercase
        font-size: 14pt
        color cd-hellgrau


@media screen and (max-width: minimal-menu-width)
    #menu
        flex-direction: column
        .menu-link
            padding: 10px
            text-align: center
    #menu.collapsed
        .menu-link
            display: none
        #burger
            display inline-block
            text-align center
            margin auto