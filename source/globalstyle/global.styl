/*==========================================================
Global variables and styles
==========================================================*/
max-content-width = 950px
inner-content-width = 750px
mobile-side-padding = 15px

/*==========================================================
CD color definitions
==========================================================*/
cd-green = #78903a
cd-dark = #3c3717
cd-dark-mono = #1a1a1a

/*==========================================================
CD global font styles
==========================================================*/
body
    font-family: Arial, Helvetica, sans-serif
    color: cd-dark
    width 100%
    line-height: 150%

/*==========================================================
CD font styles
==========================================================*/
// H1 HEADLINE 17pt Laufweite 200
h1
    font-size: 21pt
    letter-spacing: 1pt
    text-transform: uppercase
    margin-bottom 30px
// H2 Headline 15pt Laufweite 200
h2
    font-size: 16pt
    margin-bottom 20px
// Text 12pt Laufweite 0
p
    font-size: 13pt
    letter-spacing: normal
    margin-bottom 5px

ul
    list-style-type: circle
    list-style-position: inside
    margin-bottom 50px

/*==========================================================
CD color variables
==========================================================*/

/*==========================================================
Global Element Style
==========================================================*/
.inner-content
    margin auto
    max-width: inner-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding

.max-content
    margin auto
    max-width: max-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding


paddingless-max-content-width = (max-content-width + (2 * mobile-side-padding))
@media screen and (min-width: paddingless-max-content-width)
    .max-content
        padding-left: 0
        padding-right: 0

paddingless-inner-content-width = (inner-content-width + (2 * mobile-side-padding))
@media screen and (min-width: paddingless-inner-content-width)
    .inner-content
        padding-left: 0
        padding-right: 0
